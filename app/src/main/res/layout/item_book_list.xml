<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="#fdfcfe"
    android:paddingBottom="8dp">

    <TextView
        android:id="@+id/books_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:textColor="#716f71"
        android:textSize="20sp"/>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/book_more_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <TextView
            android:id="@+id/tv_books_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="更多"
            android:textColor="#75cf5e"/>

        <ImageView
            android:layout_marginTop="3dp"
            android:id="@+id/iv_books_in_more"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignTop="@id/tv_books_more"
            android:layout_toRightOf="@id/tv_books_more"
            android:layout_marginRight="15dp"
            android:src="@drawable/left_more"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/books_in_recycleview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/books_type">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>